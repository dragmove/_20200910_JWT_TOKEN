{
  "name": "boilerplate-typescript-express",
  "version": "0.0.1",
  "description": "",
  "keywords": [],
  "author": "Hyunseok Kim",
  "license": "MIT",
  "main": "",
  "private": true,
  "dependencies": {
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.8",
    "@types/jsonwebtoken": "^8.5.0",
    "chalk": "^4.1.0",
    "dotenv": "^8.2.0",
    "jsonwebtoken": "^8.5.1",
    "nodemon": "^2.0.4",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  },
  "scripts": {
    "start:dev": "concurrently \"npm run server\" \"npm run server:auth\"",
    "server": "nodemon --exec 'node --inspect=127.0.0.1:9229 --require ts-node/register ./src/server/server.ts'",
    "server:auth": "nodemon --exec 'node --inspect=127.0.0.1:9239 --require ts-node/register ./src/server/auth.ts'"
  },
  "nodemonConfig": {
    "ignore": [
      "src/**/*.test.ts",
      "src/**/*.spec.ts"
    ],
    "watch": [
      "src"
    ],
    "ext": "ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,html,css}": "prettier --write"
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "trailingComma": "es5",
    "bracketSpacing": true
  }
}
